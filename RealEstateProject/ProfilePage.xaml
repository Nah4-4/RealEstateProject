<Page x:Class="RealEstateProject.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealEstateProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">
    <Grid>
        <StackPanel Width="250" Margin="0,10,0,0">
            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" Margin="0,80,0,0"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding Email}"/>
            <ListBox Height="100" ItemsSource="{Binding SoldHomes}" Margin="0,10,0,0"/>
            <ListBox Height="100" ItemsSource="{Binding BoughtHomes}" Margin="0,10,0,0"/>
            <Button Content="Add Listing" Click="AddListing_Button_Click" Width="80" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
